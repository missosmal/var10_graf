<Page x:Class="var10_graf.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:var10_graf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="WhiteSmoke">
        <Grid Background="LightPink" VerticalAlignment="Top" Height="50">
            <Label Content="Главная страница" HorizontalAlignment="Center"/>
            <Button Content="Добавить" Click="Add_Button" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="30" Margin="10,10,120,10" Background="WhiteSmoke"/>
            <Button Content="Выйти" Click="Exit_Button" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="30" Margin="10" Background="WhiteSmoke"/>
        </Grid>
        <Grid Margin="10,70,10,10">
            <ScrollViewer Background="LightPink">
                <StackPanel x:Name="parent">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>   
    </Grid>
</Page>
